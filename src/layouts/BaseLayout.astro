---
import LanguageSelector from '../components/LanguageSelector.astro';

// Optional props for dynamic title and language
const { title = 'My Event Site', lang = 'en', partnersLabel = 'Partners'} = Astro.props;

---

<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="stylesheet" href="../styles/global.css" />
  </head>
  <body>
    <LanguageSelector />

    <main>
      <slot />
    </main>

    <footer>
        <h2>{partnersLabel}</h2>
        <div class="partners">
            <img src="/logo1.png" alt="Partner 1" />
            <img src="/logo2.png" alt="Partner 2" />
            <img src="/logo3.png" alt="Partner 3" />
        </div>
      <p>&copy; {new Date().getFullYear()} My Event</p>
    </footer>
  </body>
</html>