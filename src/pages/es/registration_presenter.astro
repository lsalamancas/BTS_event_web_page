  <section class="submission-guidelines">
    <!-- <p>Tipo detectado: {params}</p> -->

  <h2>📄 Pautas para el envío de resúmenes</h2>
  <p>Revisa el documento con las instrucciones sobre formato, contenido y extensión antes de completar el formulario.</p>
  <a href={`${base}/Plantilla_Resumen_Seminario_BTS.pdf`} target="_blank" class="guideline-btn">
  📥 Descargar pautas en PDF
  </a>
  <a id="formulario-link" class="guideline-btn">
    📤 Subir resumen PDF
  </a>
  <script>
  const urlSearchParams = new URLSearchParams(window.location.search);
  const params = Object.fromEntries(urlSearchParams.entries());
  const tipo = params.tipo;
  // console.log(tipo)
  const link = tipo === "bts"
   ? "https://docs.google.com/forms/d/e/1FAIpQLSeEJJyRlQie7VbNgY-ku2u6PNMysYboA2tryDAnd5KfmjrWxA/viewform?usp=pp_url&entry.1521862496=Usuario+de+tecnolog%C3%ADa+BTS"
   : "https://docs.google.com/forms/d/e/1FAIpQLSeEJJyRlQie7VbNgY-ku2u6PNMysYboA2tryDAnd5KfmjrWxA/viewform?usp=pp_url&entry.1521862496=Estudiante";
   const anchor = document.getElementById("formulario-link");
    if (anchor) {
      anchor.href = link;
      anchor.textContent = tipo === "bts"
        ? "📤 Subir experiencia BTS"
        : "📤 Subir resumen como estudiante";
    }

</script>
